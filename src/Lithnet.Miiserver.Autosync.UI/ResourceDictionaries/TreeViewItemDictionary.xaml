<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Lithnet.Miiserver.AutoSync.UI.ViewModels">

    <HierarchicalDataTemplate DataType="{x:Type viewModels:ManagementAgentsViewModel}"
                              ItemsSource="{Binding}">
        <StackPanel>
            <TextBlock Text="Management Agents">
                <!--<TextBlock.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add new class constructor..."
                          Command="{Binding Commands.AddConstructor}" />
                        <Separator />
                        <MenuItem Header="Paste"
                          Command="{Binding Commands.Paste}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>-->
            </TextBlock>
        </StackPanel>
    </HierarchicalDataTemplate>

    <HierarchicalDataTemplate DataType="{x:Type viewModels:MAConfigParametersViewModel}"
                              ItemsSource="{Binding}">
        <StackPanel>
            <TextBlock Text="{Binding Path=DisplayName}" x:Name="tbName">
                <!--<TextBlock.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add new class constructor..."
                          Command="{Binding Commands.AddConstructor}" />
                        <Separator />
                        <MenuItem Header="Paste"
                          Command="{Binding Commands.Paste}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>-->

            </TextBlock>
        </StackPanel>

        <HierarchicalDataTemplate.Triggers>
            <DataTrigger Binding="{Binding Path=IsNew}" Value="true">
                <Setter TargetName="tbName" Property="FontStyle" Value="Italic"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding IsMissing}" Value="true">
                <Setter TargetName="tbName" Property="Foreground" Value="DarkRed"/>
            </DataTrigger>
        </HierarchicalDataTemplate.Triggers>

    </HierarchicalDataTemplate>


    <HierarchicalDataTemplate DataType="{x:Type viewModels:SettingsViewModel}"
                              ItemsSource="{Binding}">
        <StackPanel>
            <TextBlock Text="Settings">
                <!--<TextBlock.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add new class constructor..."
                                  Command="{Binding Commands.AddConstructor}" />
                        <Separator />
                        <MenuItem Header="Paste"
                                  Command="{Binding Commands.Paste}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>-->

            </TextBlock>
        </StackPanel>
    </HierarchicalDataTemplate>

</ResourceDictionary>