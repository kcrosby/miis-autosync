<controls:MetroWindow  x:Class="Lithnet.Miiserver.AutoSync.UI.Windows.RunDetailsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:ui="clr-namespace:Lithnet.Miiserver.AutoSync.UI"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" WindowStartupLocation="CenterOwner"
                      mc:Ignorable="d" BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}"
                      Title="{Binding WindowTitle}" >
    <Grid>
        <ContentControl Content="{Binding}">
            <ContentControl.Resources>
                <ResourceDictionary Source="/ResourceDictionaries/ItemViewDictionary.xaml"/>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</controls:MetroWindow>
