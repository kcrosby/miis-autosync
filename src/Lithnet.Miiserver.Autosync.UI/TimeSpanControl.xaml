<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="Lithnet.Miiserver.Autosync.UI.TimeSpanControl"
    Height="Auto" 
    Width="Auto"
    x:Name="TsControl">

    <StackPanel Orientation="Horizontal">
        <controls:NumericUpDown Value="{Binding Path=Days, ElementName=TsControl}" Minimum="0" Margin="0 0 5 0"/>
        <TextBlock Text="days" VerticalAlignment="Center"/>
        <controls:NumericUpDown Value="{Binding Path=Hours, ElementName=TsControl}" Minimum="0" Margin="5 0 5 0"/>
        <TextBlock Text="hours" VerticalAlignment="Center"/>
        <controls:NumericUpDown Value="{Binding Path=Minutes, ElementName=TsControl}" Minimum="0" Margin="5 0 5 0"/>
        <TextBlock Text="minutes" VerticalAlignment="Center"/>
        <controls:NumericUpDown Value="{Binding Path=Seconds, ElementName=TsControl}" Minimum="0" Margin="5 0 5 0" />
        <TextBlock Text="seconds" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
