            <ListView Grid.Row="3" 
                      DataContext="{Binding Path=SelectedItem, ElementName=ListView}" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" 
                      ItemsSource="{Binding Path=DetailMessages}" />

        </Grid>
    </DataTemplate>
</ResourceDictionary>
 
